# Build a single plugin OCI image with the binary at image root.
# - /bin/<PLUGIN_NAME>-plugin (e.g. /bin/secretreader-plugin)
# Usage: docker buildx build -f hack/Dockerfile.plugin --build-arg PLUGIN_NAME=<name> .
# When mounted at /plugin, the executable is /plugin/bin/<PLUGIN_NAME>-plugin.

ARG PLUGIN_NAME
FROM golang:1.25 AS builder
ARG PLUGIN_NAME
ARG TARGETOS=linux
ARG TARGETARCH=amd64
WORKDIR /src

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN mkdir -p /out/bin && CGO_ENABLED=0 GOOS=${TARGETOS} GOARCH=${TARGETARCH} go build \
	-trimpath -ldflags="-s -w" \
	-o /out/bin/${PLUGIN_NAME}-plugin \
	./plugins/${PLUGIN_NAME}/cmd/plugin
RUN chmod 0555 /out/bin/${PLUGIN_NAME}-plugin

FROM scratch
COPY --from=builder /out/ /
USER 65532:65532
# No ENTRYPOINT: this image is designed for use as an Image Volume (KEP-4639),
# where the container runtime mounts the filesystem rather than executing it.
